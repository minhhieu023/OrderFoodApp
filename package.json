{
  "name": "order-food-app",
  "version": "1.0.0",
  "description": "Simple food ordering application",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js --ignore 'public/*'",
    "prod": "NODE_ENV=production node -r dotenv/config app.js dotenv_config_path=.env.production"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mysql2": "^2.3.0",
    "qrcode": "^1.5.3",
    "node-cron": "^3.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "ext": "js,json,ejs,css",
    "ignore": [
      "node_modules/*",
      "public/*"
    ],
    "delay": "500"
  }
}
