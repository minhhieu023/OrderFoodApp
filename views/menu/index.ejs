<%- include('../layouts/header', {path: '/menu'}) %>
<div class="container mt-4">
    <h1>Menu Management</h1>
    
    <!-- Add Menu Item Form -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Add New Menu Item</h5>
            <form action="/menu" method="POST">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" required minlength="2" maxlength="255">
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="number" 
                           step="1000" 
                           class="form-control" 
                           name="price" 
                           required 
                           min="0"
                           placeholder="VNÄ">
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Add Item</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Menu Items List -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Menu Items</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% menu.forEach(item => { %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><%= formatCurrency(item.price) %></td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="editItem(<%= JSON.stringify(item) %>)">Edit</button>
                                <form action="/menu/<%= item.id %>?_method=DELETE" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/menu.js"></script>