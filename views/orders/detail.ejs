<%- include('../layouts/header', {path: '/orders/report'}) %>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="mb-1">
                        <i class="bi bi-receipt me-2"></i>Order #<%= orderId %>
                    </h4>
                    <div class="text-muted">
                        <i class="bi bi-person me-1"></i><%= customerName %> â€¢ 
                        <i class="bi bi-clock me-1"></i><%= new Date(orderDate).toLocaleString('vi-VN') %>
                    </div>
                </div>
                <a href="/orders/report" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-1"></i>Back to Report
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Item</th>
                            <th scope="col">Note</th>
                            <th scope="col" class="text-end">Price</th>
                            <th scope="col" class="text-center">Quantity</th>
                            <th scope="col" class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orderDetails.forEach(item => { %>
                            <tr>
                                <td class="fw-medium"><%= item.itemName %></td>
                                <td>
                                    <% if (item.note) { %>
                                        <span class="text-muted fst-italic">
                                            <i class="bi bi-pencil-square me-1"></i><%= item.note %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td class="text-end"><%= formatCurrency(item.itemPrice) %></td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">
                                        <%= item.quantity %>
                                    </span>
                                </td>
                                <td class="text-end"><%= formatCurrency(item.itemTotal) %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="4" class="text-end fw-bold">Order Total:</td>
                            <td class="text-end fw-bold fs-5 text-primary">
                                <%= formatCurrency(orderTotal) %>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 