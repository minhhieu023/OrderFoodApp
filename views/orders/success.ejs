<%- include('../layouts/header', {path: '/orders'}) %>

<div class="container mt-4">
  <div class="card">
    <div class="card-body text-center py-5">
      <div class="mb-4">
        <svg width="120" height="120" viewBox="0 0 120 120">
          <circle cx="60" cy="60" r="54" fill="#4CAF50" fill-opacity="0.1" stroke="#4CAF50" stroke-width="2"/>
          <path d="M40 60L55 75L85 45" stroke="#4CAF50" stroke-width="3" fill="none"/>
        </svg>
      </div>
      <div class="alert alert-success mb-4" role="alert">
        <h4 class="alert-heading mb-2">Order Placed Successfully!</h4>
        <p class="mb-0">
          Thank you <%= user.name %>, your order has been placed.
          Order ID: #<%= order.id %>
        </p>
      </div>
      
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card bg-light border-0">
            <div class="card-body">
              <div class="d-flex align-items-center mb-4">
                <div class="me-3">
                  <i class="bi bi-person-circle fs-1 text-muted"></i>
                </div>
                <div class="flex-grow-1">
                  <h5 class="mb-1"><%= user.name %></h5>
                  <div class="text-muted">
                    <i class="bi bi-clock me-1"></i><%= order.formattedDate %>
                  </div>
                </div>
              </div>

              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Item</th>
                      <th class="text-center">Quantity</th>
                      <th class="text-end">Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.items.forEach(function(item) { %>
                      <tr>
                        <td>
                          <%= item.itemName %>
                          <% if (item.note) { %>
                            <br><small class="text-muted"><%= item.note %></small>
                          <% } %>
                        </td>
                        <td class="text-center"><%= item.quantity %></td>
                        <td class="text-end"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(item.itemPrice) %></td>
                      </tr>
                    <% }); %>
                    <tr class="table-light">
                      <td colspan="2" class="text-end fw-bold">Total:</td>
                      <td class="text-end fw-bold"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(order.total) %></td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <div class="text-center mt-4">
                <a href="/orders" class="btn btn-primary">Back to Orders</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>